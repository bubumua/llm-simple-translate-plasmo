{
  "name": "llmsimtran-plasmo",
  "displayName": "Llmsimtran plasmo",
  "version": "0.0.1",
  "description": "A translate plugin based on llm api",
  "author": "1069785399@qq.com",
  "scripts": {
    "dev": "plasmo dev",
    "devf": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build",
    "buildf": "plasmo build --target=firefox-mv3",
    "packageb": "plasmo build; plasmo package",
    "packagebf": "plasmo build --target=firefox-mv3; plasmo package --target=firefox-mv3",
    "packagef": "plasmo package --target=firefox-mv3"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "franc-min": "^6.2.0",
    "lucide-react": "^0.562.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.19",
    "typescript": "5.3.3"
  },
  "manifest": {
    "version": "0.1.1",
    "browser_specific_settings": {
      "gecko": {
        "id": "llm-translator-dev@yourname.com",
        "strict_min_version": "142.0",
        "data_collection_permissions": {
          "required": [
            "none"
          ]
        }
      }
    },
    "permissions": [
      "storage",
      "tabs",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "<all_urls>"
    ]
  }
}